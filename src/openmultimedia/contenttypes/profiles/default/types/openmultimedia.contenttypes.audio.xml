<?xml version="1.0"?>
<object name="openmultimedia.contenttypes.audio" meta_type="Dexterity FTI"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="openmultimedia.contenttypes">

 <!-- Basic metadata -->
 <property name="title" i18n:translate="">Audio</property>
 <property name="description" i18n:translate="">A audio</property>
 <property name="content_icon">++resource++openmultimedia.contenttypes/video_icon.png</property>
 <property name="allow_discussion">True</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types" />

 <!-- schema interface -->
 <property name="schema">openmultimedia.contenttypes.content.audio.IAudio</property>

 <!-- class used for content items -->
 <property name="klass">openmultimedia.contenttypes.content.audio.Audio</property>

 <!-- add permission -->
 <property name="add_permission">openmultimedia.contenttypes.AddAudio</property>

 <!-- enabled behaviors -->
 <property name="behaviors">
  <element value="plone.app.content.interfaces.INameFromTitle" />
  <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />
 </property>

 <!-- View information -->
 <property name="default_view">view</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="view"/>
  <element value="scrollable"/>
 </property>

 <!-- Method aliases -->
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>

 <!-- Actions -->
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
